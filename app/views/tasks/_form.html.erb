<%= form_with(model: task, url: [@board, @lane, @card, task], class: "contents") do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 rounded-lg mt-3">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-5">
    <%= form.text_field :title, placeholder: 'Task Name', class: "text-xs text-field" %>
  </div>

  <div class="mt-3">
    <%= form.submit class: "submit-btn" %>
    <% if action_name == "edit" %>
      <%= link_to 'Cancel', board_lane_card_task_path(@board, @lane, @card, task), class: 'text-xs' %>
    <% else %>
      <%= link_to 'Cancel', board_lane_card_path(@board, @lane, @card), class: 'text-xs' %>
    <% end %>
  </div>
<% end %>
